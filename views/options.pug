
doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title The SyllySyncer
    link(rel='stylesheet', href='style.css')
  body
    .container
      .top-banner
        .left-section
          span The SyllySyncer 
        .right-section
          a(href='/options') Home     
          a(href='/') Login
    h2 Welcome #{username}!
    .dropdown-container
      .row
          .dropdown
            label(for='dropdown1') Class:
            select(id='dropdown1' onchange='handleDropdownChange(this)')
              option(value='' disabled selected hidden) Select
              each student in students
                option(value= student.class)= student.class
          .dropdown
            label(for='dropdown2') Section:
            select(id='dropdown2' onchange='handleDropdownChange(this)')
              option(value='' disabled selected hidden) Select
              each student in students
                option(value= student.section)= student.section
          .dropdown
            label(for='dropdown3') Group Size:
            select(id='dropdown3' onchange='handleDropdownChange(this)')
              option(value='' disabled selected hidden) Select
              option(value='1') 1
              option(value='2') 2
              option(value='3') 3
    .button-container
      a.button(href='/results') Generate