html
  head
    title Login Page
    link(rel="stylesheet" type="text/css" href="/style.css")
  body.bodyLogin
    form.formLogin(action="/login" method="post")
      label.labelLogin(for="username") Username:
      input.inputLogin(type="text" id="username" name="username" required)
      
      label.labelLogin(for="password") Password:
      input.inputLogin(type="password" id="password" name="password" required)

      button.buttonLogin(type="submit", href="/home") Login

<a href="/signup">Create a new account</a>
